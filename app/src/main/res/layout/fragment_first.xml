<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myfypproject.Fragment.HomeFragment">

<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/home_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="parent"
    android:fillViewport="true"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/your_appt_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Appointment"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TableLayout
            android:id="@+id/table_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/your_appt_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:stretchColumns="*"
            >
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="15dp"
                    android:background="@drawable/square_box"
                    >
                    <TextView
                        android:id="@+id/upcoming_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:id="@+id/upcoming_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upcoming"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="15dp"
                    android:background="@drawable/square_box"
                    >
                    <TextView
                        android:id="@+id/past_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        />
                    <TextView
                        android:id="@+id/Past_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Past"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="15dp"
                    android:background="@drawable/square_box"
                    >
                    <TextView
                        android:id="@+id/noShow_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        />
                    <TextView
                        android:id="@+id/noshow_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Show"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </TableRow>
        </TableLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/list_cardview"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:orientation="vertical"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:background="@color/colorTextWhite"
            app:layout_constraintTop_toBottomOf="@id/table_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/floating_btn_layout"
            app:cardUseCompatPadding="true"
            >
            <LinearLayout
                android:id="@+id/no_active_label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Active Appointment....."
                    />
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/active_appt_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:visibility="visible"
                >
                <TextView
                    android:id="@+id/active_appt_username_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorTextBlack"
                    android:text="Low Chen Thye"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />


                <TextView
                    android:id="@+id/active_appt_service_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Consultation"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/active_appt_username_txt"
                    app:layout_constraintVertical_bias="0.285" />
                <TextView
                    android:id="@+id/active_appt_date_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="12/02/2021"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/active_appt_service_txt"
                    app:layout_constraintVertical_bias="0.285" />

                <TextView
                    android:id="@+id/active_appt_status_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:text="Confirmed"
                    android:textColor="@color/colorTextBlack"
                    android:textAlignment="center"
                    />
                <TextView
                    android:id="@+id/active_appt_starttime_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/active_appt_status_val"
                    android:layout_marginEnd="20dp"
                    android:textStyle="italic"
                    android:text="09:00AM-"
                    android:textColor="#808080"
                    android:textAlignment="center"
                    />
                <TextView
                    android:id="@+id/active_appt_endTime_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/appt_starttime_val"
                    android:layout_marginEnd="20dp"
                    android:textStyle="italic"
                    android:text="09:00AM"
                    android:textColor="#808080"
                    android:textAlignment="center"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/floating_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="right"
            android:background="@color/colorTextWhite"
            >
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/add_appt_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_add_24"
                android:layout_margin="@dimen/fab_margin"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</androidx.constraintlayout.widget.ConstraintLayout>